#include<bits/stdc++.h>
using namespace std;

void zigzag(string str, int n){
	int i=0,d = 1, len = str.length(); 
	string ch[n];
	int row=0;
	while(i< len){
		ch[row].push_back(str[i]);
		if(row ==0)
			d = 1;
		else if(row==n-1)
			d = 0;
		if(d)
			row++;
		else
			row--;
		i++;
	}
	for(int i=0; i<n; i++){
		cout<<ch[i]<<endl;
	}
}

int main()
{
	string str = "abcdefghijkl";
	int n =3;
	zigzag(str, n);
}
